<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.woo.qlsp_trungvit.BanRa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng quan"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng số lượng"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_tongSoLuongB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="3.500"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá trung bình"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_giaTrungBinhB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="2.000"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_gravity="end"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_tongTienB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.000.000"
            android:textSize="18dp"
            android:gravity="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorPrimary"/>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_banRa"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

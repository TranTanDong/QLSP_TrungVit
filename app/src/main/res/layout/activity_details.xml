<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_muavao"
            android:paddingStart="10dp" />

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Trứng Mua Vào"
            android:textSize="32dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng:"
            android:paddingStart="10dp"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tv_soLuong_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:text="4500"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá:"
            android:paddingStart="10dp"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tv_donGia_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:text="1700"
            android:textSize="24dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tv_tinhTien_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="7.650.000"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold|italic"
        android:textSize="24dp"
        android:gravity="right"
        android:paddingRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại:"
            android:paddingStart="10dp"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tv_loai_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:text="Cồ"
            android:textSize="24dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian:"
            android:paddingStart="10dp"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tv_thoiGian_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:text="20/04/2018"
            android:textSize="24dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách hàng:"
            android:paddingStart="10dp"
            android:textSize="24dp"
            android:textColor="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tv_khachHang_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:textColor="@android:color/holo_blue_light"
            android:text="Bay Lên Không"
            android:textSize="24dp"
            android:textStyle="bold|italic" />

    </LinearLayout>



</LinearLayout>
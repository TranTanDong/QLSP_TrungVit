<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/rlt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/tv_tenKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trần Văn A"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="24dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tv_sdtKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0123456789"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tv_diachiKH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồng Dân - Bạc Liêu"
                    android:textStyle="bold|italic" />

            </LinearLayout>


            <ImageView
                android:id="@+id/btn_goi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_sua"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <ImageView
                android:id="@+id/btn_sua"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_xoa"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageView
                android:id="@+id/btn_xoa"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:srcCompat="@android:drawable/ic_menu_delete" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
